<Window x:Class="CSM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSM"
        xmlns:flags="clr-namespace:FamFamFam.Flags.Wpf;assembly=FamFamFam.Flags.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="225" Width="359" WindowStyle="None" Loaded="Window_Loaded" Closed="Window_Closed" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        ResizeMode="NoResize" Background="#FF380964" Topmost="false">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="8" CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Window">
                        <Border CornerRadius="14">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="#FF070713" Offset="0.592"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>

    <Window.Resources>
        <!-- An instance of the converter being used -->
        <flags:CountryIdToFlagImageSourceConverter x:Key="CountryIdToFlagImageSourceConverter" />
    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem x:Name="cm_overlay" Header="Overlay" IsCheckable="True" Click="cm_overlay_Click" />
            <MenuItem x:Name="cm_always_on_top" Header="Always on top" IsCheckable="True" Click="cm_always_on_top_Click"/>
            <Separator/>
            <MenuItem x:Name="cm_exit" Header="Exit" Click="cm_exit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid Margin="0,0,800,434">
        <Grid Margin="14,74,-352,-158">
            <ListBox x:Name="CustomListBox" HorizontalContentAlignment="Stretch" Background="{x:Null}" BorderBrush="{x:Null}" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Center" Width="338">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="IsHitTestVisible" Value="False"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter />
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="{Binding Path=CountryIso, Converter={StaticResource CountryIdToFlagImageSourceConverter}}" Width="40" Height="25" Margin="0,0,14,0" Stretch="Fill" />
                            <StackPanel>
                                <TextBlock Text="{Binding Country}" FontWeight="Bold" Foreground="#FFCCCCCC" FontSize="18"/>
                                <TextBlock Text="{Binding Traffic}" TextWrapping="Wrap" Foreground="#FFCCCCCC"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <StackPanel Orientation="Horizontal" Margin="0,0,-359,-70" HorizontalAlignment="Center">
            <Label Content="COD Server Monitor" Foreground="White"  FontSize="28" BorderBrush="#FF430D0D" IsEnabled="False" FontFamily="Bahnschrift SemiBold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center">
            </Label>
        </StackPanel>
        <Grid Margin="6,0,-345,-210" Height="24" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47*" />
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="58*" />
            </Grid.ColumnDefinitions>
            <Label x:Name="lbl_connection_state" Grid.Column="0" Content="Connecting..." Foreground="White" FontFamily="Bahnschrift SemiBold" Grid.ColumnSpan="2" />
            <local:NetworkDeviceComboBox x:Name="cb_deviceComboBox" Grid.Column="1" SelectionChanged="cb_deviceComboBox_SelectionChanged" Grid.ColumnSpan="2" />
        </Grid>
    </Grid>
</Window>
