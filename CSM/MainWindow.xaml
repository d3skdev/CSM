<Window
    x:Class="CSM.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:flags="clr-namespace:FamFamFam.Flags.Wpf;assembly=FamFamFam.Flags.Wpf"
    xmlns:local="clr-namespace:CSM"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="279"
    Height="163"
    AllowsTransparency="True"
    Background="Black"
    Closed="Window_Closed"
    Loaded="Window_Loaded"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="8"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>


    <Window.Resources>
        <!--  An instance of the converter being used  -->
        <flags:CountryIdToFlagImageSourceConverter x:Key="CountryIdToFlagImageSourceConverter" />
    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem
                x:Name="cm_overlay"
                Click="cm_overlay_Click"
                Header="Overlay"
                IsCheckable="True"
                IsChecked="{Binding IsOverlayActive}" />
            <MenuItem
                x:Name="cm_always_on_top"
                Click="cm_always_on_top_Click"
                Header="Always on top"
                IsCheckable="True"
                IsChecked="{Binding Topmost}" />
            <Separator />
            <MenuItem
                x:Name="cm_exit"
                Click="cm_exit_Click"
                Header="Exit" />
        </ContextMenu>
    </Window.ContextMenu>


    <Grid Margin="8">
        <Grid.RowDefinitions>
            <!--  Title row - Auto height based on content  -->
            <RowDefinition Height="Auto" />
            <!--  Content row - Takes remaining space  -->
            <RowDefinition Height="*" />
            <!--  Bottom row - Auto height based on content  -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label
            x:Name="lbl_header"
            Width="263"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            BorderBrush="#FF430D0D"
            Content="COD Server Monitor"
            FontFamily="Bahnschrift SemiBold"
            FontSize="24"
            Foreground="White"
            IsEnabled="False" />

        <Grid x:Name="grid_no_content" Grid.Row="1">
            <TextBlock
                Margin="0,0,0,14"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontStyle="Italic"
                Foreground="#FF616161">
                Please join a lobby or match<LineBreak />
                to display server info</TextBlock>
        </Grid>

        <!--  Content area with nested grid  -->
        <Grid
            x:Name="grid_content"
            Grid.Row="1"
            Margin="0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Left Column  -->
            <Grid
                Grid.Column="0"
                Margin="0,0,12,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Flag Image  -->
                <Image
                    Grid.Row="0"
                    Width="60"
                    Height="40"
                    Margin="0,12,0,0"
                    VerticalAlignment="Bottom"
                    Source="{Binding Path=CountryIso, Converter={StaticResource CountryIdToFlagImageSourceConverter}}"
                    Stretch="Fill" />

                <!--  Traffic Label  -->
                <Label
                    Grid.Row="1"
                    MinWidth="55"
                    HorizontalAlignment="Center"
                    Content="{Binding Path=Traffic, Mode=TwoWay, FallbackValue='0/KB'}"
                    FontSize="12"
                    FontWeight="Normal"
                    Foreground="#FFCCCCCC" />
            </Grid>

            <!--  Right Column  -->
            <Grid Grid.Column="1" VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  First Label  -->
                <Label
                    x:Name="lbl_country"
                    Grid.Row="0"
                    Width="Auto"
                    MaxHeight="28"
                    Content="{Binding Country, FallbackValue='Country'}"
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="#FFCCCCCC" />

                <!--  Second Label  -->
                <Label
                    x:Name="lbl_city"
                    Grid.Row="1"
                    Width="Auto"
                    MaxHeight="25"
                    Content="{Binding Path=City, FallbackValue='City'}"
                    Foreground="#FFCCCCCC" />

                <!--  Third Label  -->
                <Label
                    x:Name="lbl_asn"
                    Grid.Row="2"
                    Width="Auto"
                    MaxHeight="30"
                    Content="{Binding Path=ASN, FallbackValue='ASN'}"
                    Foreground="#FFCCCCCC" />
            </Grid>
        </Grid>

        <!--  Bottom row  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label
                x:Name="lbl_connection_state"
                Grid.Column="0"
                Canvas.Left="10"
                Canvas.Top="188"
                Content="Connecting..."
                FontFamily="Bahnschrift SemiBold"
                Foreground="White" />
            <local:NetworkDeviceComboBox
                x:Name="cb_deviceComboBox"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                SelectionChanged="cb_deviceComboBox_SelectionChanged" />
        </Grid>
    </Grid>


</Window>
